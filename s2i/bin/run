#!/bin/bash

set -e

APP_TARGET=${APP_TARGET:-build/libs}
echo "---> Starting Spring Boot application"
echo "--> # APP_TARGET = $APP_TARGET"
echo "--> # JAVA_OPTS = $JAVA_OPTS"
echo "---> Running application from standalone jar/war..."
chown -R 1001:0 /dev/urandom
java -Djava.security.egd=file:/dev/urandom $JAVA_OPTS -jar `find $APP_TARGET -maxdepth 1 -regex ".*\(jar\|war\)"`